/* MODAL HEADER */
.progressHeader.slds-modal__header {
	border-bottom: none;
    padding: 0px;
    width: 100%;
    z-index: 15;
}
.progressHeader.slds-is-fixed {
	left: 0;
}
.progressHeader.slds-modal__header .row:first-child{
    padding: 12px 24px;
    margin: 0px;
    width: 100%;
    height: 72px;
    background-color: #ffffff;
}
.progressHeader.slds-modal__header .slds-progress-bar {
    height: 4px;
    background-color: #deedf2;
}

.progressHeader.slds-modal__header .slds-progress-bar__value {
    background-color: #ec0000;
}
.progressHeader.slds-modal__header .slds-col{
    display: flex;
    align-items: center;
    margin: 0px;
    padding: 0px;
}
.progressHeader.slds-modal__header .slds-col:nth-child(2){
    justify-content: center;
}
.progressHeader.slds-modal__header .slds-col:last-child{
    justify-content: flex-end;
}
.progressHeader.slds-modal__header .slds-modal__title {
	color: #444444;
    font-family: "SantanderHeadlineW05-Bold";
	font-size: 20px;
	line-height: 28px;
}

.progressHeader.slds-modal__header .logo-red{
    width: 48px;
    height: 48px;
    margin-right: 12px;
}

.progressHeader.slds-modal__header .slds-col:last-child .slds-button {
	margin-left: 20px;
}