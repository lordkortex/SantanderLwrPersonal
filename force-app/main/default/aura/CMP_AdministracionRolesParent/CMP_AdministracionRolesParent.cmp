    <!-- Table title -->
    
    <div class="slds-card__header slds-grid pagination">
        <header class="slds-media slds-media_center slds-has-flexi-truncate">
            <div class="slds-media__body">
                <div class="slds-card__header-title results">
                {!$Label.c.AdminRoles_RolesList}
                </div>
            </div>
        </header>
    </div>

    <!-- Table -->
    <c:CMP_AdministracionRolesTable aura:id="rolesTable" tableData="{!v.data}"/>

    <!-- Buttons -->
    
    <div class="slds-clearfix">
        <div class="slds-float_left">
            <button class="slds-button slds-button_brand whiteButton" title="{!$Label.c.AdminRoles_Cancel}" onclick="{!c.resetValues}">{!$Label.c.AdminRoles_Cancel}</button>
        </div>
        <div class="slds-float_right">
            <button class="slds-button slds-button_brand redButton" title="{!$Label.c.AdminRoles_Save}" onclick="{!c.sendRoleData}">{!$Label.c.AdminRoles_Save}</button>
        </div>
    </div>
   
</aura:component>