<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" controller="CNT_AdministracionRolesController">
   
    <!-- COMPONENT ATTRIBUTES -->
    <aura:attribute name="data"             type="List"     description="Data displayed in the roles table"/>
    <aura:attribute name="dataSaveSuccess"  type="Boolean"  default="false"  description="Flag to display the toast message on save success"/>
    <aura:attribute name="type" type="String" default="success"/>

    <lightning:navigation aura:id="navService"/>
    <c:CMP_ServiceComponent aura:id="Service"/>
    <!-- COMPONENT MARKUP -->
    <!--Title -->
    <c:CMP_Title title="{!$Label.c.AdminRoles_Roles}"/>
    <!-- Toast message-->
   
   <c:CMP_Toast type="{!v.type}" show="{!v.dataSaveSuccess}" message="{!$Label.c.AdminRoles_RoleSuccess}"/>  
   


